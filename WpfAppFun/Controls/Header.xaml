<UserControl x:Class="WpfAppFun.Controls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfAppFun.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Background="DodgerBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4 *"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="/Assets/Images/Iconarchive-Cute-Animal-Cute-Cat.1024.png" Height="100" />
        </StackPanel>
       
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Test App" 
                       FontSize="50" Foreground="White" 
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
