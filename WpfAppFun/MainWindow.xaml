<Window
	x:Class="WpfAppFun.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:WpfAppFun.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfAppFun"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:views="clr-namespace:WpfAppFun.Views"
	Title="App"
	Width="800"
	Height="450"
	BorderBrush="Black"
	BorderThickness="1"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<controls:Header />

		<views:MainPage Grid.Row="1" />

		<controls:MainStatusBar Grid.Row="2" />

	</Grid>
</Window>
